@page "/categories"
@inherits CategoryListBase

<h3>Category List</h3>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Categories)
    {
    <tr>
        <td>@category.Id</td>
        <td>@category.Name</td>
        <td>@category.Description</td>
        <td>
            <button @onclick="@(context => NavigationManager.NavigateTo($"/editcategory/{category.Id}"))">Edit</button>
            <button @onclick="() => DeleteCategory(category.Id)">Delete</button>
        </td>
    </tr>
    }
    </tbody>
</table>

